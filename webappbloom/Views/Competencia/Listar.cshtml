@model ListaCompetenciaViewModel

<h1>Listando Competências</h1>
<table class="table">
    <tr class="table-header">
        <th class="table-cell">Id</th>
        <th class="table-cell">Coluna Bloom</th>
        <th class="table-cell">Linha Bloom</th>
        
    </tr>
    @{
        foreach (var item in Model.Competencias)
        {
            <tr>
                <td class="table-cell">@item.Id</td>
                <td class="table-cell">@item.ColunaBloom</td>
                <td class="table-cell">@item.LinhaBloom</td>
            </tr>
        }
    }
    <style>
        
    table {
        margin: 20px 0;
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: center;
        border-bottom: 5px solid #ff0000;
    }

    th {
        font-weight: bold;
    }

    .horizontal-row {
        white-space: nowrap;
    }

    .square-cell {
        border: 1px solid #000; 
        padding: 5px; 
    }
</style>
</table>

